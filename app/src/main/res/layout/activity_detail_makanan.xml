<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="150dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16sp"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/nama_detail"
        android:layout_marginTop="16sp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/image_detail"
        android:text="@string/nama_makanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:id="@+id/desc"
        android:textStyle="bold"
        android:layout_marginStart="16sp"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/image_detail"/>

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/desc_detail"
        android:layout_below="@id/desc"
        android:layout_width="match_parent"
        android:justificationMode="inter_word"
        android:layout_marginEnd="16dp"
        android:textAlignment="textStart"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/bala"/>

    <Spinner
        android:layout_margin="16dp"
        android:layout_below="@+id/desc_detail"
        android:id="@+id/spinner"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>